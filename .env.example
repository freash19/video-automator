# HeyGen Automation Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# GOOGLE AI / NANO BANANO
# ============================================
# Required for NANO_BANANO: image generation
GOOGLE_API_KEY=your_google_api_key_here
VERTEX_AI_PROJECT=your_project_id
VERTEX_AI_LOCATION=us-central1

# ============================================
# TELEGRAM NOTIFICATIONS
# ============================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ============================================
# HEYGEN CREDENTIALS (optional, for auto-login)
# ============================================
HEYGEN_LOGIN=your_heygen_email
HEYGEN_PASSWORD=your_heygen_password

# ============================================
# EXTERNAL APIS (for B-roll search)
# ============================================
PEXELS_API_KEY=your_pexels_api_key
OPENAI_API_KEY=your_openai_api_key
RUNWARE_API_KEY=your_runware_api_key

# ============================================
# DATABASE (optional)
# ============================================
DATABASE_URL=mysql://root@localhost:3306/broll_automation

# ============================================
# JWT / AUTH
# ============================================
JWT_SECRET=your_jwt_secret_key

# ============================================
# LOCAL STORAGE
# ============================================
LOCAL_STORAGE_PATH=./storage

# ============================================
# SERVER CONFIG
# ============================================
PORT=3000
NODE_ENV=development
